http://ookie.click {
	bind unix//tmp/ookie.click.sock
	bind unix//tmp/caddy-main.sock
	redir https://c.ookie.click/er/
}

http://c.ookie.click {
	bind unix//tmp/ookie.click.sock
	bind unix//tmp/caddy-main.sock
	root * /web/c.ookie.click/
	file_server
	log {
		output file /var/log/caddy/c.ookie.click.log {
			roll_size 1000MiB
			roll_uncompressed
			roll_keep 8
			roll_keep_for 168h
		}
	}

	redir / /er/
	#redir /er/cf https://dash.cloudflare.com/x/ookie.click

	#reverse_proxy /er/longpoll localhost:4343
	reverse_proxy /er/leaderboard/wstimer localhost:4300
	reverse_proxy /er/leaderboard/* unix//tmp/cookiepy.sock # todo?
}
